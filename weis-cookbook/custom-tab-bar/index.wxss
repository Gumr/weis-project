/* pages/custom-tab-bar/index.wxss */
.tab-bar-container {
  width: 100%;
  position: fixed;
  left: 0;
  bottom: 0;
}
.tab-bar-container .bg {
  height: 180rpx;
  position: absolute;
  left: 0;
  bottom: 0;
  z-index: -1;
}
.tab-bar-container .tab-bar-bg {
  height: 100%;
}
.tab-bar-container .tab-bar {
  width: 100%;
  height: 180rpx;
  display: flex;
  justify-content: space-around;
  background-color: transparent;
  padding-top: 40rpx;
  box-sizing: border-box;
  position: relative;
  z-index: 9999;
}
.tab-bar-container .tab-bar .tab-bar-item {
  flex-direction: column;
  justify-content: space-around;
  align-items: flex-start;
  flex-shrink: 0;
  text-align: center;
  z-index: 9999;
}
.tab-bar-container .tab-bar .tab-bar-item .tab-bar-icon {
  width: 80rpx;
  height: 80rpx;
  margin: 0 auto;
}
.tab-bar-container .tab-bar .tab-bar-item .tab-bar-text {
  font-size: 20rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #000000;
  line-height: 28rpx;
}
.tab-bar-container .tab-bar .tab-bar-item.tab-bar-item-c {
  margin-top: -16rpx;
}
.tab-bar-container .tab-bar .tab-bar-item.tab-bar-item-c .tab-bar-icon {
  width: 108rpx;
  height: 108rpx;
}
.tab-bar-container .tab-bar .tab-bar-item .tip {
  width: 120rpx;
  height: 30rpx;
  line-height: 30rpx;
  text-align: center;
  background: #FA6400;
  font-size: 18rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #ffffff;
  border-radius: 15rpx;
  margin: -20rpx auto 0;
  z-index: 2;
}
