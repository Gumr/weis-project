.comments {
  width: 100%;
  height: 100%;
  background: #fff;
  overflow-x: hidden;
  padding-top: 40rpx;
  z-index: 9999;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.comments.show {
  top: 0 !important;
}
.comments > .total {
  font-size: 30rpx;
  font-weight: 500;
  color: #000000;
  line-height: 30rpx;
}
.comments .publish {
  margin-top: 24rpx;
}
.comments .publish .txt {
  width: 690rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: #efefef;
  border-radius: 40rpx;
  margin: 0 auto 50rpx;
  padding-left: 30rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  font-weight: 400;
  color: #999999;
}
.comments .publish-kb {
  width: 750rpx;
  height: auto;
  min-height: 110rpx;
  padding: 20rpx 122rpx 20rpx 20rpx;
  box-sizing: border-box;
  background: #ffffff;
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 99999;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  opacity: 0;
  transition: all 0.3s;
}
.comments .publish-kb.show {
  opacity: 1;
}
.comments .publish-kb .zw {
  min-height: 70rpx;
  padding: 20rpx 22rpx;
  box-sizing: border-box;
  opacity: 0;
  font-size: 28rpx;
  line-height: 28rpx;
  font-weight: 400;
  color: #000000;
}
.comments .publish-kb .txtarea {
  width: 606rpx;
  height: auto;
  min-height: 70rpx;
  padding: 20rpx 22rpx;
  position: absolute;
  left: 20rpx;
  top: 20rpx;
  bottom: 20rpx;
  background: #efefef;
  border-radius: 16rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  line-height: 28rpx;
  font-weight: 400;
  color: #000000;
}
.comments .publish-kb .submit {
  font-size: 28rpx;
  font-weight: 400;
  color: #FA6400;
  line-height: 40rpx;
  position: absolute;
  right: 34rpx;
  top: 50%;
  transform: translateY(-50%);
}
.comments .publish-kb .submit.disabled {
  color: #999999;
}
.comments .lists .comment-main {
  padding: 0 0 30rpx;
}
.comments .lists .comment-main .infos .humans {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 15rpx;
}
.comments .lists .comment-main .infos .humans .detail {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.comments .lists .comment-main .infos .humans .detail .img {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  margin-right: 12rpx;
}
.comments .lists .comment-main .infos .humans .detail .txt {
  font-size: 28rpx;
  font-weight: 400;
  color: #999999;
  line-height: 30rpx;
}
.comments .lists .comment-main .infos .humans .likebox {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.comments .lists .comment-main .infos .humans .likebox .txt {
  font-size: 24rpx;
  font-weight: 400;
  color: #000000;
  line-height: 30rpx;
  margin-right: 13rpx;
}
.comments .lists .comment-main .infos .humans .likebox .txt.liked {
  color: #FA6E07;
}
.comments .lists .comment-main .infos .humans .likebox .like {
  width: 27.64rpx;
  height: 27.72rpx;
}
.comments .lists .comment-main > .content > .txt {
  font-size: 30rpx;
  font-weight: 400;
  color: #000000;
  line-height: 42rpx;
  padding-left: 60rpx;
}
.comments .lists .comment-main > .content > .time {
  font-size: 20rpx;
  font-weight: 400;
  color: #999999;
  line-height: 28rpx;
  margin: 12rpx 0 24rpx;
  padding-left: 60rpx;
}
.comments .lists .comment-main > .content .comment-sub-container {
  width: 630rpx;
  background: #f9f9f9;
  border-radius: 6rpx;
  padding: 30rpx 17rpx 30rpx 20rpx;
  box-sizing: border-box;
  margin-left: 60rpx;
}
.comments .lists .comment-main > .content .comment-sub-container .comment-sub {
  margin-bottom: 30rpx;
}
.comments .lists .comment-main > .content .comment-sub-container .comment-sub .infos {
  margin-bottom: 18rpx;
}
.comments .lists .comment-main > .content .comment-sub-container .comment-sub .infos .humans-sub {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 6rpx;
}
.comments .lists .comment-main > .content .comment-sub-container .comment-sub .infos .humans-sub .detail {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.comments .lists .comment-main > .content .comment-sub-container .comment-sub .infos .humans-sub .detail .img {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  margin-right: 12rpx;
}
.comments .lists .comment-main > .content .comment-sub-container .comment-sub .infos .humans-sub .detail .txt {
  font-size: 28rpx;
  font-weight: 400;
  color: #999999;
  line-height: 30rpx;
}
.comments .lists .comment-main > .content .comment-sub-container .comment-sub .infos .humans-sub .likebox {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.comments .lists .comment-main > .content .comment-sub-container .comment-sub .infos .humans-sub .likebox .txt {
  font-size: 24rpx;
  font-weight: 400;
  color: #000000;
  line-height: 30rpx;
  margin-right: 13rpx;
}
.comments .lists .comment-main > .content .comment-sub-container .comment-sub .infos .humans-sub .likebox .like {
  width: 27.64rpx;
  height: 27.72rpx;
}
.comments .lists .comment-main > .content .comment-sub-container .comment-sub .content {
  max-width: 90%;
  white-space: wrap;
  font-size: 30rpx;
  font-weight: 400;
  color: #000000;
  line-height: 42rpx;
  margin-bottom: 12rpx;
  padding-left: 60rpx;
}
.comments .lists .comment-main > .content .comment-sub-container .comment-sub .content .replyBox {
  width: 100%;
  max-width: 100%;
  font-size: 28rpx;
  color: #000000;
}
.comments .lists .comment-main > .content .comment-sub-container .comment-sub .content .replyBox .name {
  color: #999999;
}
.comments .lists .comment-main > .content .comment-sub-container .comment-sub .content .time {
  font-size: 20rpx;
  font-weight: 400;
  color: #999999;
  line-height: 28rpx;
  margin: 12rpx 0 24rpx;
  margin-top: 12rpx;
}
.comments .lists .comment-main > .content .comment-sub-container .more-reply {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #1873c5;
  line-height: 40rpx;
  padding-left: 60rpx;
}
.comments .comments_null {
  text-align: center;
  margin-top: 160rpx;
}
.comments .comments_null .icon {
  width: 310rpx;
  height: 200rpx;
  margin-bottom: 10rpx;
}
.comments .comments_null .txt {
  font-size: 26rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #999999;
  line-height: 37rpx;
}
.moreOperate {
  width: 100%;
  border-radius: 20rpx 20rpx 0px 0px;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 1000;
  background: #F8F8F8;
  transition: all 0.3s;
}
.moreOperate.show {
  animation: showPopup 0.3s forwards;
}
.moreOperate .options {
  padding: 90rpx 90rpx 82rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  justify-content: space-between;
  background: #FFFFFF;
}
.moreOperate .options .opt {
  width: 240rpx;
  height: 270rpx;
  background: #F8F8F8;
  border-radius: 10rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-direction: column;
  justify-content: center;
}
.moreOperate .options .opt .icon {
  width: 70rpx;
  height: 70rpx;
  margin-bottom: 56rpx;
}
.moreOperate .options .opt .name {
  font-size: 26rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #000000;
  line-height: 36rpx;
}
.moreOperate .cancel {
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #A9A9A9;
  background: #F8F8F8;
}
@keyframes showPopup {
  from {
    height: 0;
  }
  to {
    height: 552rpx;
  }
}
.flex {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.bdb {
  border-bottom: 1rpx solid #EFEFEF;
}
.line {
  width: 630rpx;
  height: 1rpx;
  background: #EFEFEF;
  margin-top: 30rpx;
  margin-left: 60rpx;
}
