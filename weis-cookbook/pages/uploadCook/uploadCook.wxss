}
.cook-detail .dishnamePld {
  font-size: 40rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  color: #999;
}
.cook-detail .category {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin: 50rpx 0 60rpx;
}
.cook-detail .category text {
  font-size: 26rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #666666;
  line-height: 37rpx;
  margin-right: 16rpx;
}
.cook-detail .category .tabs {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.cook-detail .category .tabs .each {
  width: 110rpx;
  height: 44rpx;
  line-height: 44rpx;
  text-align: center;
  background: #e8e8e8;
  border-radius: 22rpx;
  margin-right: 24rpx;
  font-size: 26rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #ffffff;
  color: #A9A9A9;
}
.cook-detail .category .tabs .each.selected {
  background: linear-gradient(270deg, #f6d718 0%, #e9ae0a 100%);
  color: #FFFFFF;
}
.cook-detail textarea {
  width: 100%;
  height: auto;
  min-height: 77rpx;
  font-size: 26rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #666666;
  line-height: 37rpx;
  z-index: 1;
}
.cook-detail .materials {
  padding: 35rpx 0;
}
.cook-detail .materials .tabs {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin-bottom: 40rpx;
}
.cook-detail .materials .tabs .each {
  width: 110rpx;
  height: 44rpx;
  line-height: 44rpx;
  background: #e8e8e8;
  border-radius: 22rpx;
  font-size: 26rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #666666;
  text-align: center;
  margin-right: 24rpx;
}
.cook-detail .materials .values {
  margin-bottom: 45rpx;
}
.cook-detail .materials .values .eachValue {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.cook-detail .materials .values .eachValue.sortTarget {
  position: absolute;
  opacity: 0.7;
}
.cook-detail .materials .values .eachValue.sorting {
  position: absolute;
}
.cook-detail .materials .values .eachValue input {
  width: 250rpx;
  height: 64rpx;
  border-bottom: 1rpx solid #E8E8E8;
  font-size: 26rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(0, 0, 0, 0.85);
  line-height: 64rpx;
}
.cook-detail .materials .values .eachValue input:nth-of-type(1) {
  margin-right: 80rpx;
}
.cook-detail .materials .values .eachValue input:nth-of-type(2) {
  margin-right: 60rpx;
}
.cook-detail .materials .values .eachValue image {
  width: 36rpx;
  height: 36rpx;
}
.cook-detail .method {
  margin-bottom: 84rpx;
}
.cook-detail .method .steps {
  margin-bottom: 30rpx;
}
.cook-detail .method .steps .step.sorting {
  position: absolute;
}
.cook-detail .method .steps .step .label {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 32rpx;
}
.cook-detail .method .steps .step .label .txt {
  font-size: 28rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(0, 0, 0, 0.85);
  line-height: 28rpx;
}
.cook-detail .method .steps .step .label .imgBox {
  width: 72rpx;
  height: 72rpx;
  line-height: 72rpx;
  text-align: center;
}
.cook-detail .method .steps .step .label .imgBox image {
  width: 36rpx;
  height: 36rpx;
  vertical-align: middle;
}
.cook-detail .method .steps .step .img {
  width: 690rpx;
  height: 400rpx;
  position: relative;
  overflow: hidden;
}
.cook-detail .method .steps .step .img .default {
  height: 100%;
  border-radius: 20rpx;
}
.cook-detail .method .steps .step .img .default .process {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.3);
  position: absolute;
  left: 0;
  top: 0;
  z-index: 9999;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}
.cook-detail .method .steps .step .img .default .process .tip {
  font-size: 40rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
  line-height: 56rpx;
}
.cook-detail .method .steps .step .img .default .process .percentage {
  font-size: 40rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
  line-height: 56rpx;
}
.cook-detail .method .steps .step .img .stepImgBox {
  width: 100%;
  height: 100%;
  overflow: hidden;
  position: relative;
  border-radius: 20rpx;
}
.cook-detail .method .steps .step .img .stepImgBox image {
  width: 100%;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  border-radius: 20rpx;
  text-align: center;
}
.cook-detail .method .steps .step .img > image {
  width: 100%;
}
.cook-detail .method .steps .step .desc {
  font-size: 26rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #666666;
  line-height: 37rpx;
  margin-top: 40rpx;
}
.cook-detail .method .steps .operate {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  justify-content: space-between;
  margin-top: 40rpx;
}
.cook-detail .method .steps .operate .add {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.cook-detail .method .steps .operate .add image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}
.cook-detail .method .steps .operate .add .label {
  font-size: 26rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #e6b838;
  line-height: 26rpx;
}
.cook-detail .method .steps .operate .sort {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.cook-detail .method .steps .operate .sort image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}
.cook-detail .method .steps .operate .sort .label {
  font-size: 26rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #e6b838;
  line-height: 26rpx;
}
.cook-detail .method .steps .operate .sort .label.sorting {
  color: #FA6400;
}
