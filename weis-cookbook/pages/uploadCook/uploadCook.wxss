.cook-detail {
  padding: 35rpx 30rpx 164rpx;
  box-sizing: border-box;
}
.cook-detail .dishname {
  width: 100%;
  height: 70rpx;
  font-size: 40rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: normal;
  color: rgba(0, 0, 0, 0.85);
