.popup_operate {
  width: 100%;
  background: #F8F8F8;
  border-radius: 20rpx 20rpx 0px 0px;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 1000;
}
.popup_operate.show {
  animation: showPopup 0.3s forwards;
}
.popup_operate .options {
  padding: 90rpx 90rpx 82rpx;
  box-sizing: border-box;
  background: #FFFFFF;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  justify-content: space-between;
}
.popup_operate .options .opt {
  width: 240rpx;
  height: 270rpx;
  background: #F8F8F8;
  border-radius: 10rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-direction: column;
  justify-content: center;
}
.popup_operate .options .opt .img {
  width: 70rpx;
  height: 70rpx;
  margin-bottom: 56rpx;
}
.popup_operate .options .opt .txt {
  font-size: 26rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #000000;
  line-height: 36rpx;
}
.popup_operate .cancel {
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #A9A9A9;
  background: #F8F8F8;
}
@keyframes showPopup {
  from {
    height: 0;
  }
  to {
    height: 552rpx;
  }
}
