.flex {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.text-overflow {
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
.waterfall {
  padding: 40rpx 30rpx 0;
  box-sizing: border-box;
}
.waterfall .box .column {
  width: 335rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-direction: column;
  align-items: flex-start;
  float: left;
}
.waterfall .box .column:nth-of-type(odd) {
  margin-right: 20rpx;
}
.waterfall .box .column .good {
  width: 100%;
  margin-bottom: 20rpx;
  background: #ffffff;
  box-shadow: 0rpx 2rpx 24rpx -6rpx rgba(186, 186, 186, 0.3);
  border-radius: 10rpx;
  padding-bottom: 20rpx;
  position: relative;
}
.waterfall .box .column .good .status {
  height: 36rpx;
  position: absolute;
  left: 0;
  top: 0;
}
.waterfall .box .column .good .video_icon {
  width: 44rpx;
  height: 44rpx;
  position: absolute;
  right: 16rpx;
  top: 16rpx;
  z-index: 9999;
}
.waterfall .box .column .good .imgBox {
  width: 335rpx;
  overflow: hidden;
  height: auto;
  min-height: 268rpx;
  max-height: 446rpx;
  position: relative;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  justify-content: center;
  border-radius: 10rpx 10rpx 0 0;
}
.waterfall .box .column .good .imgBox .goodimg {
  width: 335rpx;
  min-width: 335rpx;
  min-height: 268rpx;
  max-height: 446rpx;
  overflow: hidden;
  flex-shrink: 0;
}
.waterfall .box .column .good .name {
  width: 315rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(0, 0, 0, 0.85);
  line-height: 38rpx;
  margin-bottom: 28rpx;
  margin-left: 20rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
.waterfall .box .column .good .author {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding: 0 20rpx;
  box-sizing: border-box;
  justify-content: space-between;
}
.waterfall .box .column .good .author .human {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.waterfall .box .column .good .author .human .imgbox {
  position: relative;
  width: 30rpx;
  height: 30rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.waterfall .box .column .good .author .human .imgbox image {
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
}
.waterfall .box .column .good .author .human .imgbox .icon {
  width: 16rpx;
  height: 16rpx;
  position: absolute;
  right: -4rpx;
  bottom: -4rpx;
  z-index: 9999;
}
.waterfall .box .column .good .author .human text {
  max-width: 150rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  font-size: 18rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(0, 0, 0, 0.85);
  line-height: 26rpx;
  padding-left: 10rpx;
}
.waterfall .box .column .good .author .operate {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.waterfall .box .column .good .author .operate image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 8rpx;
}
.waterfall .box .column .good .author .operate text {
  font-size: 18rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(0, 0, 0, 0.85);
  line-height: 24rpx;
}
.cook-no {
  width: 100%;
  text-align: center;
  margin-top: 104rpx;
}
.cook-no image {
  width: 300rpx;
  height: 300rpx;
  margin-bottom: 22rpx;
}
.cook-no view {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #999999;
  line-height: 40rpx;
}
