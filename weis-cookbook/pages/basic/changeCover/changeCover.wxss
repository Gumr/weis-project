.cover {
  margin: 128rpx auto 115rpx;
  height: 600rpx;
  display: block;
}
.sprite {
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
  position: relative;
}
.sprite .imgs {
  width: 100%;
  display: flex;
  justify-content: flex-start;
  position: relative;
}
.sprite .imgs image {
  height: 86rpx;
}
.sprite .imgs .overlay {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.4);
  z-index: 999;
}
.sprite .position {
  width: 86rpx;
  height: 86rpx;
  overflow: hidden;
  display: flex;
  justify-content: flex-start;
  position: absolute;
  top: 0;
  left: 0;
  border: 4rpx solid #FCCC49;
  box-sizing: border-box;
  z-index: 9999;
}
.sprite .position image {
  width: 86rpx;
  height: 86rpx;
  flex-shrink: 0;
}
.operate {
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: absolute;
  left: 0;
  bottom: 40rpx;
}
.operate .cancel {
  margin-left: 40rpx;
}
.operate .sure {
  width: 217rpx;
  height: 72rpx;
  line-height: 72rpx;
  background: linear-gradient(315deg, #FB892D 0%, #FCCC49 100%);
  border-radius: 44rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
  text-align: center;
}
