.item-wrap {
  position: relative;
}

.item-wrap .item {
  position: absolute;
  width: 100%;
  z-index: 1;
}

.item-wrap .item.itemTransition {
  transition: transform 0.3s !important;
}

.item-wrap .item.zIndex {
  z-index: 2;
}

.item-wrap .item.cur {
  transition: initial;
}

.item-wrap .item.fixed {
  z-index: 0 !important;
}

.info {
  position: relative;
  padding-top: 100%;
  background: #ffffff;
}

.info__item {
  position: absolute;
  border: 1rpx solid #ebedf0;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  overflow: hidden;
  padding: 10rpx;
  box-sizing: border-box;
}

.info__item .image {
  width: 100%;
  height: 100%;
}

.cell {
  padding: 20rpx;
  background: #FFFFFF;
}

.cell .eachValue {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.cell .eachValue.sortTarget {
  position: absolute;
  opacity: .7;
}

.cell .eachValue input {
  width: 250rpx;
  height: 64rpx;
  border-bottom: 1rpx solid #E8E8E8;
  font-size: 26rpx;
  font-family: PingFangSC-Regular,PingFang SC;
  font-weight: 400;
  color: rgba(0, 0, 0, 0.85);
  line-height: 64rpx;
}

.cell .eachValue input:nth-of-type(1) {
  margin-right: 80rpx;
}

.cell .eachValue input:nth-of-type(2) {
  margin-right: 60rpx;
}

.cell .eachValue image {
  width: 36rpx;
  height: 36rpx;
}

.cell .operate {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 40rpx;
}

.cell .operate .add {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.cell .operate .add image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.cell .operate .add .label {
  font-size: 26rpx;
  font-family: PingFangSC-Medium,PingFang SC;
  font-weight: 500;
  color: #e6b838;
  line-height: 26rpx;
}

.cell .operate .sort {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.cell .operate .sort image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.cell .operate .sort .label {
  font-size: 26rpx;
  font-family: PingFangSC-Medium,PingFang SC;
  font-weight: 500;
  color: #e6b838;
  line-height: 26rpx;
}
