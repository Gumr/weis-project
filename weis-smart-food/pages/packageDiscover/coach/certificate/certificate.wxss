.border {
  display: block;
  content: "";
  width: 690rpx;
  height: 1rpx;
  background: #333333;
  opacity: 0.1;
  position: absolute;
  left: 0;
  right: 0;
  margin: auto;
}
.certificate {
  width: 100%;
  padding: 20rpx 30rpx 90rpx;
  text-align: center;
}
.certificate .list::after {
  position: relative;
  display: block;
  content: "";
  width: 690rpx;
  height: 1rpx;
  background: #333333;
  opacity: 0.1;
  position: absolute;
  left: 0;
  right: 0;
  margin: auto;
}
.certificate .list__img {
  padding-top: 40rpx;
  width: 490rpx;
}
.certificate .list__name {
  font-size: 30rpx;
  color: #333333;
  padding: 40rpx 0;
}
.certificate .list:nth-child(2) .list__img {
  height: 340rpx;
}
.certificate .list:nth-child(2) .list__img {
  height: 694rpx;
}
