/* pages/marketing/slimmingCamp/slimmingCampRecharge/slimmingCampRecharge.wxss */
.container {
  width: 100%;
  padding: 40rpx 30rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.recharge {
  margin-bottom: 40rpx;
  font-size: 26rpx;
  color: rgba(51, 51, 51, 0.8);
  position: relative;
  height: 697rpx;
}
.recharge__background {
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: -1;
  top: 0;
  left: 0;
}
.recharge__title {
  font-size: 44rpx;
  color: #333;
  margin-bottom: 141rpx;
}
.recharge__cards {
  margin-bottom: 40rpx;
  display: flex;
  align-items: center;
}
.recharge__card {
  text-align: center;
  flex-grow: 1;
  color: #333;
  padding: 60rpx 0;
  background: rgba(233, 233, 233, 0.5);
  border-radius: 10rpx;
}
.recharge__card:first-child {
  margin-right: 20rpx;
}
.recharge__card--active {
  background: linear-gradient(270deg, #ffc200 0%, #ffdd70 100%);
}
.recharge__card-title {
  font-weight: bold;
  margin-bottom: 28rpx;
  font-size: 44rpx;
}
.recharge__card-label {
  font-size: 28rpx;
}
.flex {
  display: flex;
}
.flex-items-center {
  display: flex;
  align-items: center;
}
.label {
  color: #333;
  font-size: 24rpx;
}
.label--active {
  color: #fe5e0f;
}
.check-icon {
  width: 28rpx;
  height: 28rpx;
}
.label-bold {
  font-weight: bold;
}
.footer {
  text-align: center;
  padding: 0 30rpx;
}
.protocol {
  justify-content: center;
  margin-bottom: 50rpx;
}
.btn {
  color: #fff;
  padding: 29rpx 0;
  text-align: center;
  border-radius: 44rpx;
}
