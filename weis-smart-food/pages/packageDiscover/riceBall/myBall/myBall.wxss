page {
  background: #f7f7f7;
}
.activity {
  width: 100%;
  height: 100%;
  background: #f7f7f7;
}
.activity .content {
  padding: 40rpx 30rpx;
}
.activity .content .list {
  width: 690rpx;
  height: 220rpx;
  background: #FFFFFF;
  border-radius: 10rpx;
  display: flex;
  margin: 0 auto 40rpx;
  padding: 30rpx 0 0 25rpx;
}
.activity .content .list .cover {
  width: 165rpx;
  height: 165rpx;
  border-radius: 10rpx;
  margin-right: 30rpx;
}
.activity .content .list .right .title {
  color: #333333;
  font-size: 36rpx;
  font-weight: bold;
  margin: 13rpx 0 36rpx 0;
  line-height: 42rpx;
  width: 400rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}
.activity .content .list .right .date {
  color: rgba(51, 51, 51, 0.4);
  font-size: 24rpx;
  margin-bottom: 14rpx;
  line-height: 24rpx;
  padding-left: 18rpx;
  position: relative;
}
.activity .content .list .right .date::after {
  display: block;
  content: '';
  width: 8rpx;
  height: 8rpx;
  background: #41C48C;
  border-radius: 50%;
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  margin: auto;
}
.activity .content .list .right .status {
  color: #fe5e0f;
  font-size: 24rpx;
  font-weight: bold;
  padding-left: 18rpx;
  position: relative;
}
.activity .content .list .right .status.black {
  color: #333333;
}
.activity .content .list .right .status::after {
  display: block;
  content: '';
  width: 8rpx;
  height: 8rpx;
  background: #fe5e0f;
  border-radius: 50%;
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  margin: auto;
}
.activity .content .tips {
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #9D9D9D;
  text-align: center;
}
.activity .null {
  background: #ffffff;
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  z-index: -1;
}
.activity .null image {
  width: 320rpx;
  height: 240rpx;
}
.activity .null text {
  text-align: center;
  color: #a9a9a9;
  font-size: 28rpx;
  line-height: 44rpx;
  margin-top: 20rpx;
}
