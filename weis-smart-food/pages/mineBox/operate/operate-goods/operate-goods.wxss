.operate-goods {
  width: 100%;
  padding-bottom: 128rpx;
}
.operate-goods .banner {
  position: relative;
}
.operate-goods .banner swiper {
  width: 750rpx;
  height: 560rpx;
  margin: 0 auto;
}
.operate-goods .banner swiper swiper-item {
  position: relative;
}
.operate-goods .banner swiper swiper-item image {
  width: 100%;
  height: 100%;
}
.operate-goods .banner .dots {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 12rpx;
  margin: 0 auto;
  display: flex;
  justify-content: center;
}
.operate-goods .banner .dots .dot {
  width: 8rpx;
  height: 8rpx;
  background: #FFFFFF;
  border-radius: 4rpx;
  opacity: 0.6;
  margin: 0 3rpx;
}
.operate-goods .banner .dots .dot.active {
  opacity: 1;
  width: 24rpx;
}
.operate-goods .goods {
  padding: 42rpx 30rpx 32rpx;
  border-bottom: 20rpx solid rgba(233, 233, 233, 0.4);
}
.operate-goods .goods .price {
  display: flex;
}
.operate-goods .goods .price text:nth-child(1) {
  font-size: 28rpx;
  color: #fe5e0f;
  line-height: 60rpx;
}
.operate-goods .goods .price text:nth-child(2) {
  font-size: 52rpx;
  color: #fe5e0f;
  line-height: 44rpx;
}
.operate-goods .goods .price text:nth-child(3) {
  font-size: 28rpx;
  color: #808080;
  line-height: 60rpx;
  text-decoration: line-through;
}
.operate-goods .goods .name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
}
.operate-goods .myShare {
  padding: 30rpx 30rpx 48rpx;
  border-bottom: 20rpx solid rgba(233, 233, 233, 0.4);
}
.operate-goods .myShare .title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 34rpx;
}
.operate-goods .myShare .title view:nth-child(1) {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}
.operate-goods .myShare .title view:nth-child(2) {
  font-size: 24rpx;
  color: #999999;
  display: flex;
  align-items: center;
}
.operate-goods .myShare .title view:nth-child(2) image {
  width: 24rpx;
  height: 24rpx;
  margin-left: 4rpx;
}
.operate-goods .myShare .content {
  display: flex;
  justify-content: space-around;
}
.operate-goods .myShare .content .content-item {
  text-align: center;
}
.operate-goods .myShare .content .content-item view:nth-child(1) {
  font-size: 28rpx;
  color: #666666;
}
.operate-goods .myShare .content .content-item view:nth-child(2) {
  font-size: 80rpx;
  font-family: "DIN";
  font-weight: bold;
  line-height: 96rpx;
  color: #333333;
}
.operate-goods .myShare .content .content-item view:nth-child(2) text {
  font-size: 32rpx;
  font-weight: 400;
}
.operate-goods .goodsDetail {
  padding: 30rpx 30rpx 48rpx;
}
.operate-goods .goodsDetail .title {
  margin-bottom: 30rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}
.operate-goods .goodsDetail .content {
  font-size: 28rpx;
  color: #808080;
  line-height: 48rpx;
}
.bottom {
  width: 750rpx;
  height: 128rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  position: fixed;
  left: 50%;
  transform: translateX(-50%);
  bottom: 154rpx;
  z-index: 10;
  background: #ffffff;
}
.bottom .share {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  margin-left: 26rpx;
}
.bottom .share image {
  width: 52rpx;
  height: 52rpx;
  margin-bottom: 10rpx;
}
.bottom .share view {
  font-size: 24rpx;
  color: #666666;
}
.bottom .share button {
  position: absolute;
  width: 100%;
  height: 100%;
  opacity: 0;
  left: 0;
  top: 0;
  z-index: 10;
}
.bottom .buy {
  width: 554rpx;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(90deg, #fb892d 0%, #fe5e0f 100%);
  border-radius: 50rpx;
  font-size: 36rpx;
  color: #ffffff;
  text-align: center;
}
