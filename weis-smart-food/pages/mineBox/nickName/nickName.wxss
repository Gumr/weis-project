page {
  height: 100%;
  width: 100%;
}
.nick {
  width: 100%;
  position: relative;
  box-sizing: border-box;
  padding: 0 30rpx;
}
.nick .box {
  margin: 196rpx auto 96rpx;
  width: 650rpx;
  height: 100rpx;
  position: relative;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #f2f3f4;
  border-radius: 50rpx;
}
.nick .box input {
  box-sizing: border-box;
  padding: 25rpx 35rpx;
  width: 550rpx;
  height: 100rpx;
  border-radius: 50rpx;
  font-size: 36rpx;
  font-weight: bold;
  color: #000000;
}
.nick .box image {
  width: 24rpx;
  height: 24rpx;
  background: #d8d8d8;
  position: absolute;
  right: 38rpx;
  z-index: 2;
}
.nick .btn {
  margin: 0 auto;
  width: 650rpx;
  height: 88rpx;
  background: linear-gradient(90deg, #fb892d 0%, #fe5e0f 100%);
  border-radius: 50rpx;
  font-size: 36rpx;
  color: #ffffff;
  line-height: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
