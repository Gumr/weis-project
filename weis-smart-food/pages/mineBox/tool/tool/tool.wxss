page {
  background: #f6f6f6;
}
.tool {
  width: 100%;
  padding: 40rpx 30rpx;
}
.tool .content .list {
  background: #ffffff;
  box-shadow: 0rpx 4rpx 24rpx -6rpx rgba(186, 186, 186, 0.3);
  border-radius: 10rpx;
}
.tool .content .list_img {
  width: 690rpx;
  height: 300rpx;
  background: #d9d9d9;
  border-radius: 10rpx 10rpx 0rpx 0rpx;
  display: flex;
}
.tool .content .list_title {
  font-size: 28rpx;
  font-weight: bold;
  color: #000000;
  padding: 30rpx;
}
