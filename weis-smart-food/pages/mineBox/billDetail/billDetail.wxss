.border {
  display: block;
  content: "";
  width: 100%;
  height: 1rpx;
  background: #000000;
  opacity: 0.1;
  position: absolute;
  left: 0;
  right: 0;
  margin: auto;
}
.balance {
  width: 100%;
}
.balance .box {
  height: 385rpx;
  background: linear-gradient(90deg, #FB892D 0%, #FE5E0F 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.balance .box .box__cash {
  margin-bottom: 20rpx;
}
.balance .box .box__cash text {
  font-size: 28rpx;
  font-weight: bold;
  color: #ffffff;
  line-height: 28rpx;
}
.balance .box .box__detail {
  font-size: 96rpx;
  font-family: "DINCondensedC";
  font-weight: bold;
  color: #ffffff;
  line-height: 115rpx;
}
.balance .box .box__detail text:nth-child(2) {
  margin-left: -20rpx;
}
.balance .box .box__detail text:nth-child(3) {
  margin-left: -20rpx;
}
.balance .box .box__tip {
  font-size: 28rpx;
  color: #ffffff;
  line-height: 40rpx;
}
.balance .operate {
  padding: 36rpx 30rpx;
  background: #ffffff;
  border-radius: 40rpx 40rpx 0rpx 0rpx;
  transform: translateY(-40rpx);
  box-sizing: border-box;
}
.balance .operate .opt {
  position: relative;
  width: 100%;
  height: 95rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.balance .operate .opt::after {
  display: block;
  content: "";
  width: 100%;
  height: 1rpx;
  background: #000000;
  opacity: 0.1;
  position: absolute;
  left: 0;
  right: 0;
  margin: auto;
  bottom: 0;
}
.balance .operate .opt text:nth-child(1) {
  font-size: 28rpx;
  color: #666666;
  white-space: nowrap;
  padding-right: 20rpx;
}
.balance .operate .opt text:nth-child(2) {
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
  text-align: right;
}
.balance .operate .opt .opt-txt {
  display: flex;
  justify-content: flex-start;
}
.balance .operate .opt .opt-txt text {
  font-weight: 550;
  padding-right: 0;
}
