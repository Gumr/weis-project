/* pages/mineBox/achieveDetail/achieveDetail.less */
.container {
  width: 100%;
  padding: 0;
}
.container .header {
  background: linear-gradient(90deg, #FB892D 0%, #FE5E0F 100%);
  height: 300rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}
.container .header .header_amount {
  width: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin-top: 52rpx;
}
.container .header .header_amount__col {
  width: calc(1 / 3 * 100%);
  text-align: center;
}
.container .header .header_amount__col view:first-of-type {
  font-size: 28rpx;
  font-weight: 550;
  color: #FFFFFF;
  line-height: 28rpx;
  margin-bottom: 32rpx;
}
.container .header .header_amount__col view text {
  font-family: "DINCondensedC";
  color: #ffffff;
  line-height: 72rpx;
  font-size: 72rpx;
}
.container .header .header_amount__col view text.unit {
  font-size: 48rpx;
}
.container .header .header_date {
  height: 64rpx;
  line-height: 64rpx;
  background: #D15400;
  border-radius: 0px 0px 0px 20rpx;
  padding: 12rpx 20rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 18rpx;
}
.container .header .header_date text {
  font-size: 30rpx;
  color: #ffffff;
  line-height: 30rpx;
  margin-right: 2rpx;
  padding-right: 16rpx;
}
.container .header .header_date .icon {
  width: 24rpx;
  height: 24rpx;
}
.container .content {
  background: #fff;
  padding: 0 30rpx;
  box-sizing: border-box;
  border-radius: 40rpx 40rpx 0px 0px;
  transform: translateY(-40rpx);
}
.container .content .content_tab {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #666666;
  line-height: 26rpx;
  padding: 60rpx 0 34rpx;
}
.container .content .content_tab_sub {
  width: calc(1 / 4 * 100%);
  text-align: center;
  position: relative;
}
.container .content .content_tab_sub.active {
  color: #333333;
}
.container .content .content_tab_sub.active::after {
  content: '';
  width: 64rpx;
  height: 8rpx;
  background: #FA6400;
  border-radius: 4rpx;
  position: absolute;
  left: 50%;
  bottom: 0;
  transform: translate(-50%, 250%);
}
.container .content .content_d .content_d_t {
  padding: 30rpx 0;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
}
.container .content .content_d .content_d_t text {
  font-size: 30rpx;
  line-height: 42rpx;
  margin-right: 10rpx;
  color: #666666;
}
.container .content .content_d .content_d_l {
  padding: 20rpx 0;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
  position: relative;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.container .content .content_d .content_d_l .grid {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  font-size: 28rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #333333;
  line-height: 26rpx;
}
.container .content .content_d .content_d_l .grid--box {
  width: 308rpx;
  flex-shrink: 0;
}
.container .content .content_d .content_d_l .grid:nth-of-type(2) {
  width: 132rpx;
}
.container .content .content_d .content_d_l .grid:nth-of-type(3) {
  width: 140rpx;
  flex-shrink: 0;
  text-align: left;
}
.container .content .content_d .content_d_l .grid:last-of-type {
  flex-grow: 1;
  text-align: left;
}
.container .content .content_d .content_d_l .grid .icon {
  width: 72rpx;
  height: 72rpx;
  margin-right: 24rpx;
  border-radius: 50%;
  flex-shrink: 0;
}
.container .content .content_d .content_d_l .grid text {
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.container .content .content_d .content_d_l--ln .grid--box {
  width: 382rpx;
  flex-shrink: 0;
}
.container .content .content_d .content_d_l--ln .grid:nth-of-type(2) {
  width: 192rpx;
  flex-shrink: 0;
}
.container .content .content_d .content_d_l--ln .grid:last-of-type {
  flex-grow: 1;
}
.container .null {
  margin-top: 123rpx;
  text-align: center;
}
.container .null image {
  width: 268rpx;
  height: 268rpx;
}
.container .null view {
  font-size: 32rpx;
  color: #999999;
}
