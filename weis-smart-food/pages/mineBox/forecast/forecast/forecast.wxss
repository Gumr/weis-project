.forecast {
  width: 100%;
}
.forecast .tip {
  background: #ff8400;
  font-size: 24rpx;
  color: #b74900;
  padding: 16rpx 0;
  text-align: center;
}
.forecast .content {
  display: flex;
}
.forecast .content .name {
  width: 184rpx;
}
.forecast .content .name .header {
  height: 110rpx;
  border-right: 1rpx solid #ff861a;
  background: #e56400;
  display: flex;
  align-items: center;
}
.forecast .content .name .header_image {
  width: 38rpx;
  height: 38rpx;
  padding-left: 46rpx;
}
.forecast .content .name .header_word {
  font-size: 28rpx;
  font-weight: bold;
  color: #ffffff;
}
.forecast .content .name .column view {
  height: 160rpx;
  text-align: center;
  border-right: 1rpx solid #fccc49;
  font-size: 28rpx;
  color: #000000;
  display: flex;
  justify-content: center;
  align-items: center;
}
.forecast .content .name .column view:last-child {
  border-bottom: 1rpx solid #e8e8e8;
}
.forecast .content .num {
  width: 104rpx;
  display: inline-block;
}
.forecast .content .num .header {
  height: 110rpx;
  background: #e56400;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
}
.forecast .content .num .header_day {
  font-size: 20rpx;
  font-weight: bold;
  color: rgba(255, 255, 255, 0.6);
  padding-bottom: 4rpx;
}
.forecast .content .num .header_week {
  font-size: 28rpx;
  font-weight: bold;
  color: #ffffff;
}
.forecast .content .num .column view {
  height: 160rpx;
  line-height: 160rpx;
  text-align: center;
  border-right: 1rpx solid #e8e8e8;
  border-bottom: 1rpx solid #e8e8e8;
  display: flex;
  align-items: center;
}
.forecast .content .num .column view input {
  line-height: 160rpx;
  font-size: 30rpx;
  font-weight: bold;
  color: #fa6400;
}
.forecast .content .num .column view text {
  width: 100%;
  font-size: 30rpx;
  font-weight: bold;
  color: #999999;
}
.forecast .content .num .column view .disabled {
  color: #999999;
}
.forecast .content .num .column view:nth-child(even) {
  background: #f2f2f2;
}
.forecast .content .total {
  width: 184rpx;
  display: inline-block;
}
.forecast .content .total .header {
  height: 110rpx;
  background: #cd5500;
  display: flex;
  align-items: center;
  justify-content: center;
}
.forecast .content .total .header_word {
  font-size: 28rpx;
  font-weight: bold;
  color: #ffffff;
}
.forecast .content .total .column view {
  height: 160rpx;
  line-height: 160rpx;
  text-align: center;
  border-right: 1rpx solid #fccc49;
  font-size: 30rpx;
  font-weight: bold;
  color: #333333;
}
.forecast .content .total .column view:nth-child(odd) {
  background: rgba(0, 0, 0, 0.05);
}
.forecast .content .total .column view:nth-child(even) {
  background: #e5e5e5;
}
.forecast .bottom {
  margin-top: 132rpx;
  text-align: center;
}
.forecast .bottom .tips {
  font-size: 24rpx;
  color: #999999;
}
.forecast .bottom .btn {
  display: flex;
  justify-content: center;
}
.forecast .bottom .btn .submit {
  margin: 20rpx 0 36rpx;
  width: 450rpx;
  height: 88rpx;
  background: linear-gradient(135deg, #fb892d 0%, #fe5e0f 100%);
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #ffffff;
  line-height: 88rpx;
}
.forecast .bottom .btn .disable {
  background: #d8d8d8;
  color: #666666;
}
.setWeek {
  display: flex;
  flex-wrap: wrap;
  padding: 30rpx 40rpx 0;
}
.setWeek .list {
  display: flex;
  width: 25%;
  margin-bottom: 50rpx;
}
.setWeek .list .icon {
  width: 38rpx;
  height: 38rpx;
}
.setWeek .list .name {
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.85);
}
.dateModify {
  padding: 50rpx 110rpx 30rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}
