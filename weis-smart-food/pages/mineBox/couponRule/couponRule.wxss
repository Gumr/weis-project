.border {
  display: block;
  content: "";
  width: 100%;
  height: 2rpx;
  background: #e9e9e9;
  transform: scaleY(0.5);
  position: absolute;
  left: 0;
  right: 0;
  margin: auto;
}
page {
  height: 100%;
}
.rule {
  width: 100%;
  box-sizing: border-box;
  padding: 40rpx 30rpx 0;
}
.rule .title {
  color: #fe5e0f;
  font-size: 36rpx;
  font-weight: 550;
  margin-bottom: 50rpx;
}
.rule .box-1 {
  display: flex;
  flex-direction: column;
  width: 100%;
  box-sizing: border-box;
  position: relative;
  margin-bottom: 50rpx;
}
.rule .box-1 .date {
  color: #fe5e0f;
  font-size: 28rpx;
  font-weight: 550;
  margin-bottom: 24rpx;
}
.rule .box-1 .desc-box {
  display: flex;
  flex-direction: column;
}
.rule .box-1 .desc-box .desc {
  color: #6d7278;
  font-size: 26rpx;
  line-height: 50rpx;
}
.bot {
  width: 100%;
  height: 148rpx;
  background: #21c4c0;
  display: flex;
  justify-content: center;
  box-sizing: border-box;
  padding: 20rpx 0 0;
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
}
.bot .btn {
  width: 670rpx;
  height: 88rpx;
  background: #ffffff;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #21c4c0;
  font-size: 32rpx;
  font-weight: 550;
}
