.container {
  width: 100%;
  padding: 0;
}
.container .header {
  background: linear-gradient(90deg, #FB892D 0%, #FE5E0F 100%);
  height: 300rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}
.container .header .header_amount {
  width: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.container .header .header_amount__col {
  width: calc(1 / 3 * 100%);
  text-align: center;
}
.container .header .header_amount__col view:first-of-type {
  font-size: 28rpx;
  font-weight: 550;
  color: #FFFFFF;
  line-height: 28rpx;
  margin-bottom: 32rpx;
}
.container .header .header_amount__col view text {
  font-family: "DINCondensedC";
  color: #ffffff;
  line-height: 72rpx;
  font-size: 72rpx;
}
.container .header .header_amount__col view text.unit {
  font-size: 48rpx;
}
.container .header .header_date {
  height: 64rpx;
  line-height: 64rpx;
  background: #D15400;
  border-radius: 0px 0px 0px 20rpx;
  padding: 12rpx 20rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 18rpx;
}
.container .header .header_date text {
  font-size: 30rpx;
  color: #ffffff;
  line-height: 30rpx;
  margin-right: 2rpx;
  padding-right: 16rpx;
}
.container .header .header_date .icon {
  width: 24rpx;
  height: 24rpx;
}
.container .content {
  background: #fff;
  padding: 0 54rpx 0 30rpx;
  box-sizing: border-box;
  border-radius: 40rpx 40rpx 0px 0px;
  transform: translateY(-40rpx);
}
.container .content .content_tab {
  display: flex;
  justify-content: space-around;
  align-items: center;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #666666;
  line-height: 26rpx;
  padding: 60rpx 0 34rpx;
}
.container .content .content_tab_sub {
  width: calc(1 / 4 * 100%);
  text-align: center;
}
.container .content .content_d .content_d_l {
  padding: 45rpx 0;
  border-bottom: 1rpx solid #f6f6f6;
  position: relative;
}
.container .content .content_d .content_d_l .content_d_l_l {
  width: 100%;
  font-size: 30rpx;
  color: #000000;
  line-height: 30rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.container .content .content_d .content_d_l .content_d_l_l text {
  width: calc(1/4 * 100%);
  text-align: center;
}
.container .content .content_d .content_d_l .content_d_l_r {
  display: flex;
  align-items: center;
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
}
.container .content .content_d .content_d_l .content_d_l_r text {
  font-size: 30rpx;
  font-weight: bold;
  color: #000000;
  line-height: 30rpx;
  margin-right: 20rpx;
}
.container .content .content_d .content_d_l .content_d_l_r .icon {
  width: 24rpx;
  height: 24rpx;
}
.container .null {
  margin-top: 123rpx;
  text-align: center;
}
.container .null image {
  width: 268rpx;
  height: 268rpx;
}
.container .null view {
  font-size: 32rpx;
  color: #999999;
}
