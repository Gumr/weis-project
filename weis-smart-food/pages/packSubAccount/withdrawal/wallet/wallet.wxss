.border {
  display: block;
  content: "";
  width: 100%;
  height: 1px;
  background: #000000;
  opacity: 0.1;
  position: absolute;
  left: 0;
  bottom: 0;
  margin: auto;
}
.border_separate {
  display: block;
  content: "";
  width: 750rpx;
  height: 20rpx;
  background: #f9f9f9;
  position: absolute;
  left: -60rpx;
  bottom: 0;
  margin: auto;
}
.wallet {
  width: 100%;
  padding: 40rpx 60rpx 168rpx;
}
.wallet .flex {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.wallet .flex-items-center {
  display: flex;
  align-items: center;
}
.wallet .input-placeholder {
  font-size: 28rpx;
  color: rgba(51, 51, 51, 0.5);
  font-weight: 400;
}
.wallet .price {
  position: relative;
}
.wallet .price::after {
  display: block;
  content: "";
  width: 750rpx;
  height: 20rpx;
  background: #f9f9f9;
  position: absolute;
  left: -60rpx;
  bottom: 0;
  margin: auto;
}
.wallet .price .title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333333;
  line-height: 30rpx;
}
.wallet .price .num {
  padding: 48rpx 0 30rpx;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.wallet .price .num::after {
  display: block;
  content: "";
  width: 100%;
  height: 1px;
  background: #000000;
  opacity: 0.1;
  position: absolute;
  left: 0;
  bottom: 0;
  margin: auto;
}
.wallet .price .num_sign {
  font-size: 72rpx;
  font-weight: bold;
  color: #333333;
  line-height: 72rpx;
}
.wallet .price .num_num {
  flex-grow: 2;
  margin: 0 10rpx;
  color: #333333;
  font-size: 72rpx;
  font-weight: bold;
  height: 72rpx;
  line-height: 72rpx;
}
.wallet .price .num_all {
  font-size: 28rpx;
  color: #fa6400;
  flex-shrink: 0;
}
.wallet .price .all {
  font-size: 24rpx;
  color: #333333;
  padding: 30rpx 0 40rpx;
}
.wallet .info {
  position: relative;
}
.wallet .info::after {
  display: block;
  content: "";
  width: 750rpx;
  height: 20rpx;
  background: #f9f9f9;
  position: absolute;
  left: -60rpx;
  bottom: 0;
  margin: auto;
}
.wallet .info_list {
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: relative;
  padding: 40rpx 0;
}
.wallet .info_list::after {
  display: block;
  content: "";
  width: 100%;
  height: 1px;
  background: #000000;
  opacity: 0.1;
  position: absolute;
  left: 0;
  bottom: 0;
  margin: auto;
}
.wallet .info_list .l {
  font-size: 28rpx;
  color: #333333;
}
.wallet .info_list .r {
  font-size: 28rpx;
  color: rgba(51, 51, 51, 0.5);
  text-align: right;
  display: flex;
  align-items: center;
}
.wallet .info_list .r image {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}
.wallet .btn {
  position: fixed;
  left: 150rpx;
  bottom: 70rpx;
  width: 450rpx;
  height: 88rpx;
  background: #d8d8d8;
  border-radius: 50rpx;
  font-size: 36rpx;
  color: #ffffff;
  line-height: 88rpx;
  text-align: center;
}
.wallet .btn.active {
  background: linear-gradient(90deg, #fb892d 0%, #fe5e0f 100%);
}
