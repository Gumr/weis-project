.buyRecord {
  width: 100%;
  padding: 0 30rpx;
}
.buyRecord .list {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 0;
  border-bottom: 1rpx solid rgba(51, 51, 51, 0.1);
}
.buyRecord .list .info {
  color: #333333;
}
.buyRecord .list .info view:nth-child(1) {
  font-size: 28rpx;
  font-weight: bold;
}
.buyRecord .list .info view:nth-child(2) {
  font-size: 24rpx;
  margin-top: 20rpx;
}
.buyRecord .list .price {
  font-size: 32rpx;
  font-weight: bold;
  color: #fa6400;
}
