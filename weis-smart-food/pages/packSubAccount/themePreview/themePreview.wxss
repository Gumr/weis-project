page {
  height: 100%;
  background: #F3F4F5;
}
.theme {
  background: #F3F4F5;
  width: 750rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 48rpx;
}
.theme image {
  width: 600rpx;
  height: 960rpx;
  border-radius: 20rpx;
  margin-bottom: 64rpx;
}
.theme .btn {
  width: 480rpx;
  height: 88rpx;
  background: linear-gradient(90deg, #FB892D 0%, #FE5E0F 100%);
  border-radius: 50rpx;
  text-align: center;
  line-height: 88rpx;
  color: #FFFFFF;
  font-size: 36rpx;
}
