page {
  width: 100%;
}
.meal {
  width: 100%;
  padding-top: 82rpx;
}
.meal .preferential {
  width: 100%;
  height: 100%;
  background: #ffffff;
  padding: 0 0 0 40rpx;
  display: flex;
  flex-wrap: wrap;
}
.meal .preferential image {
  display: block;
  width: 340rpx;
  height: 420rpx;
  margin-bottom: 38rpx;
}
.meal .preferential image:nth-of-type(2n) {
  margin-left: -10rpx;
}
.meal .title {
  padding-left: 70rpx;
  color: #000000;
  font-size: 52rpx;
  margin-bottom: 24rpx;
}
.meal .sub-title {
  margin-bottom: 60rpx;
  color: rgba(0, 0, 0, 0.5);
  font-size: 26rpx;
  padding-left: 70rpx;
}
