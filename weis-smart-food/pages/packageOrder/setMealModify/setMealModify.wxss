page {
  background: #f3f4f5;
}
.setMealModify {
  width: 100%;
  padding-bottom: 150rpx;
}
.setMealModify .header {
  position: relative;
}
.setMealModify .header_bg {
  width: 100%;
  height: 260rpx;
  position: absolute;
  left: 0;
  top: 0;
  z-index: -1;
}
.setMealModify .header_con {
  height: 260rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.setMealModify .header_con .list {
  text-align: center;
}
.setMealModify .header_con .list .label {
  font-size: 26rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 18rpx;
}
.setMealModify .header_con .list .value {
  font-size: 80rpx;
  font-family: "DINCondensedC";
  font-weight: bold;
  color: #ffffff;
  line-height: 62rpx;
}
.setMealModify .header_con .list .value text {
  font-size: 20rpx;
  color: #ffffff;
  line-height: 20rpx;
}
.setMealModify .content {
  background: #ffffff;
  border-radius: 20rpx;
  margin-top: -20rpx;
  padding: 20rpx 50rpx 40rpx;
}
.setMealModify .content .list-box {
  display: flex;
  flex-direction: column;
}
.setMealModify .content .list-box .list {
  display: flex;
  align-items: center;
  margin-bottom: 60rpx;
  position: relative;
}
.setMealModify .content .list-box .list:last-of-type {
  margin-bottom: 0;
}
.setMealModify .content .list-box .list .delete {
  width: 48rpx;
  height: 48rpx;
  margin-right: 40rpx;
}
.setMealModify .content .list-box .list .l-img-box {
  width: 160rpx;
  height: 160rpx;
  margin-right: 20rpx;
  position: relative;
  flex-shrink: 0;
}
.setMealModify .content .list-box .list .l-img-box image {
  width: 100%;
  height: 100%;
}
.setMealModify .content .list-box .list .l-img-box .tag-img {
  position: absolute;
  right: 0;
  top: 0;
}
.setMealModify .content .list-box .list .r-box .name {
  color: #333333;
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  padding-left: 28rpx;
  position: relative;
}
.setMealModify .content .list-box .list .r-box .name::before {
  display: block;
  content: "";
  width: 18rpx;
  height: 18rpx;
  background: #ffffff;
  border: 2rpx solid #808080;
  box-sizing: border-box;
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  margin: auto;
  border-radius: 50%;
}
.setMealModify .content .list-box .list .r-box .name.red::before {
  background: #ff5959;
  border: 0;
}
.setMealModify .content .list-box .list .r-box .name.green::before {
  background: #36b249;
  border: 0;
}
.setMealModify .content .list-box .list .r-box .num {
  color: #808080;
  font-size: 24rpx;
  margin-bottom: 24rpx;
}
.setMealModify .content .list-box .list .r-box .hot-box {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  margin-bottom: 10rpx;
}
.setMealModify .content .list-box .list .r-box .hot-box .hot,
.setMealModify .content .list-box .list .r-box .hot-box .h-line {
  color: #666666;
  font-size: 20rpx;
  line-height: 30rpx;
  display: flex;
  align-items: center;
}
.setMealModify .content .list-box .list .r-box .pack {
  color: #808080;
  font-size: 24rpx;
  line-height: 32rpx;
}
.setMealModify .content .list-box .list .arrow {
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  right: 0;
  top: 50rpx;
}
.setMealModify .add {
  height: 144rpx;
  background: #fffaf1;
  border-radius: 20rpx;
  border: 2rpx solid #ffffff;
  margin-top: 2rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.setMealModify .add image {
  width: 60rpx;
  height: 60rpx;
  margin-right: 22rpx;
}
.setMealModify .add view {
  font-size: 32rpx;
  font-weight: bold;
  color: #fa6400;
}
.setMealModify .footer {
  width: 650rpx;
  height: 88rpx;
  background: #d8d8d8;
  border-radius: 50rpx;
  font-size: 36rpx;
  color: #ffffff;
  line-height: 88rpx;
  text-align: center;
  margin: 0 auto;
  position: fixed;
  bottom: 45rpx;
  left: 50rpx;
}
.setMealModify .footer.active {
  background: linear-gradient(90deg, #fb892d 0%, #fe5e0f 100%);
}
