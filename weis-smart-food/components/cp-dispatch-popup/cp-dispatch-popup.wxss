.close-icon {
  width: 44rpx;
  height: 44rpx;
  position: absolute;
  top: 35rpx;
  left: 35rpx;
}
.active-icon {
  width: 50rpx;
  height: 34rpx;
  position: absolute;
  top: 0;
  right: 0;
}
.popup-header {
  padding-top: 32rpx;
  display: flex;
  justify-content: center;
  position: relative;
}
.popup-header .header-title {
  font-size: 32rpx;
  color: #333;
}
.popup-section {
  margin-top: 60rpx;
  padding: 0 30rpx;
}
.popup-section .select-menu {
  display: inline-flex;
  color: #333;
  font-size: 28rpx;
  margin-top: 30rpx;
  margin-right: 30rpx;
  width: 330rpx;
  height: 108rpx;
  box-sizing: border-box;
  border-radius: 22rpx;
  border: 2rpx solid #e9e9e9;
  position: relative;
  align-items: center;
  padding: 0 0 0 30rpx;
}
.popup-section .select-menu-wrap {
  display: flex;
}
.popup-section .select-menu.multi-line {
  flex-direction: column;
  align-items: initial;
  justify-content: center;
}
.popup-section .select-menu.multi-line .plain {
  color: #A9A9A9;
  font-size: 20rpx;
  margin-top: 12rpx;
}
.popup-section .select-menu:nth-child(2n) {
  margin-right: 0;
}
.popup-section .select-menu-active {
  color: #fe5e0f;
  border-color: #fe5e0f;
}
.popup-section .select-menu-active .plain {
  color: #fe5e0f !important;
}
.popup-section .select-menu-disabled {
  color: #a9a9a9;
}
.popup-footer {
  padding: 0 30rpx;
  margin-top: 52rpx;
}
.popup-footer .btn {
  text-align: center;
  padding: 29rpx 0;
  font-size: 30rpx;
  color: #ffffff;
  background: #a9a9a9;
  box-shadow: 0rpx 6rpx 14rpx 0rpx rgba(169, 169, 169, 0.5);
  border-radius: 44rpx;
}
.popup-footer .btn-active {
  background: linear-gradient(180deg, #ff9722 0%, #fe5e0f 100%);
  box-shadow: 0rpx 6rpx 14rpx 0rpx rgba(254, 94, 15, 0.5);
}
