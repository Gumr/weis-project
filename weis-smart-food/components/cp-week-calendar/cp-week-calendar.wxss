.day {
  width: 58rpx;
  height: 58rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 24rpx;
  font-weight: 550;
}
.day text {
  position: relative;
  /* color: #333333; */
}
.day .active:before {
  /* 圈圈 */
  content: '';
  position: absolute;
  width: 76rpx;
  height: 76rpx;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  border: 1px solid red;
  border-radius: 100%;
  background: red;
  opacity: 0.1;
  z-index: -1;
}
.day text.active {
  color: red;
}
.day text.reds {
  color: #ff0000;
}
