.date-choose {
  /* background: #21C4C0; */
  overflow: hidden;
  height: auto;
  box-sizing: border-box;
  padding: 40rpx 0 23rpx;
}

.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 40rpx 30rpx 30rpx;
}
.header__month {
  font-size: 28rpx;
  color: #333;
}
.header__icon {
  width: 24rpx;
  height: 24rpx;
}
.header__label {
  margin-left: 12rpx;
  font-style: 24rpx;
  color: #fa6400;
}
.data-month {
  width: 100%;
  align-items: center;
  padding: 0.35rem 0.35rem;
  text-align: left;
  color: #333;
  font-size: 38rpx;
}
.date-choose-swiper {
  flex-grow: 1;
  height: 150rpx;
  /* height: 110rpx; */
}
.swiper-item {
  display: flex;
  flex-direction: column;
}
.weekday,
.dateday {
  display: flex;
  justify-content: space-around;
  align-items: center;
  text-align: center;
  flex-wrap: wrap;
  /* flex-grow: 1; */
}
.dateday .wrap {
  /* height: 128rpx; */
  width: 81rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  /* justify-content: center; */
  color: #a9a9a9;
  font-size: 24rpx;
}
.dateday .wrap.color {
  color: #333;
}
.dateday .wrap.exist .day {
  color: #fe5e0f;
}
.dateday .wrap.active .day {
  /* background:rgba(255,185,63,1);
  border-radius:45rpx; */
  background: rgba(254, 94, 15, 1);
  border-radius: 50%;
  color: #ffffff;
}
.dateday .wrap.active view:nth-of-type(1) {
  color: #333;
}
