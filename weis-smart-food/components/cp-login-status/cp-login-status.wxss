.login-status .info-box {
  width: 100%;
  height: 304rpx;
  box-sizing: border-box;
  position: relative;
  z-index: 10;
}
.login-status .info-box .i-centr {
  width: 690rpx;
  height: 280rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
  margin: 0 auto;
  box-sizing: border-box;
  padding-left: 35rpx;
  display: flex;
  align-items: center;
}
.login-status .info-box .i-centr .icon {
  width: 228rpx;
  height: 228rpx;
  margin-right: 30rpx;
}
.login-status .info-box .i-centr .icon.info {
  width: 244rpx;
  height: 240rpx;
}
.login-status .info-box .i-centr .i-r .login-title {
  width: 150rpx;
  height: 48rpx;
  line-height: 48rpx;
  background: #FA6400;
  border-radius: 24rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #FFFFFF;
  text-align: center;
}
.login-status .info-box .i-centr .i-r .tip {
  width: 315rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  color: #333333;
  font-weight: 550;
  margin-top: 18rpx;
}
.login-status .info-box .i-centr .i-r.perfect .login-title {
  width: 312rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #FFFFFF;
}
.login-status .info-box .i-centr .i-r.perfect .tip {
  width: initial;
  color: #999999;
  font-size: 20rpx;
  margin-top: 18rpx;
  line-height: 28rpx;
}
.login-status .info-box .i-centr .i-r.new .tip {
  width: 350rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  margin-top: 14rpx;
}
.login-status .info-box .i-centr .i-r.new .rule {
  color: #999999;
  font-size: 20rpx;
  line-height: 28rpx;
  margin-top: 16rpx;
}
.updateStyle .info-box {
  width: 594rpx;
}
.updateStyle .info-box .i-centr {
  width: 100%;
}
.updateStyle .info-box .i-centr .icon {
  width: 216rpx;
  height: 216rpx;
}
