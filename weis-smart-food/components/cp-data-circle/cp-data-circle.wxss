.data-box {
  width: fit-content;
  display: flex;
  align-items: center;
  box-sizing: border-box;
}
.data-box .circle {
  width: 154rpx;
  height: 154rpx;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
}
.data-box .circle .today {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.data-box .circle .today .name {
  color: #333333;
  font-size: 18rpx;
  margin-bottom: 12rpx;
}
.data-box .circle .today .percent {
  display: flex;
  align-items: baseline;
  color: #a9a9a9;
  font-size: 22rpx;
}
.data-box .circle .today .percent .energy {
  color: #333333;
  display: flex;
  align-items: center;
}
.data-box .circle .today .percent .energy.active {
  color: #fa6400;
}
.data-box .circle .today .percent .denom {
  font-size: 16rpx;
}
.data-box .progress {
  margin: 0 0 0 44rpx;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}
.data-box .progress .pro-box {
  display: flex;
  align-items: center;
}
.data-box .progress .pro-box:nth-of-type(2) {
  margin: 20rpx 0;
}
.data-box .progress .pro-box .name {
  width: 60rpx;
  color: #333333;
  font-size: 20rpx;
}
.data-box .progress .pro-box .bar {
  width: 250rpx;
  height: 10rpx;
  border-radius: 6rpx;
  margin: 0 0 0 20rpx;
}
.data-box .progress .pro-box .num {
  width: 100rpx;
  color: #333333;
  font-size: 20rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  margin-left: 10rpx;
}
.data-box .progress .pro-box .num .acture {
  display: flex;
  align-items: center;
  color: #333333;
}
.data-box .progress .pro-box .num .acture.active {
  color: #fa6400;
}
