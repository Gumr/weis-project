}
.energy-bar {
  width: 100%;
  margin-top: 50rpx;
}
.energy-bar .box {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.energy-bar .box .name {
  color: #666666;
  font-size: 20rpx;
}
.energy-bar .box .bar-line {
  width: 418rpx;
  height: 14rpx;
  background: #F3F4F5;
  border-radius: 100rpx;
}
.energy-bar .box .bar-line .actual-bar {
  height: 14rpx;
  border-radius: 100rpx;
  transition: width 0.3s linear;
}
.energy-bar .box .val {
  color: #333333;
  font-size: 28rpx;
  font-weight: bold;
  font-family: 'DINCondensedC';
}
