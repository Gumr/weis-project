.charts .bar-list {
  display: flex;
  flex-grow: 1;
  justify-content: space-between;
}
.charts .bar-list .bar-item {
  text-align: center;
}
.charts .bar-list .bar-item:last-child {
  margin-right: 0;
}
.charts .bar {
  display: inline-block;
  width: 14rpx;
  height: 140rpx;
  background: #f3f4f5;
  border-radius: 100rpx;
  position: relative;
  margin-bottom: 13rpx;
}
.charts .bar__value {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 14rpx;
  background: #fca649;
  border-radius: 100rpx;
  transition: height 0.3s linear;
}
.charts .bar__value--max {
  background: #fa6400;
}
.label-18 {
  font-size: 18rpx;
  color: #666;
}
.label-20 {
  font-size: 20rpx;
  color: #666;
