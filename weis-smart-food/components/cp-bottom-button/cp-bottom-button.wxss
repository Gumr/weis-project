.fixed-button {
  position: fixed;
  bottom: 0;
  left: 0;
  box-sizing: border-box;
  width: 100%;
  padding: 10rpx 30rpx 0;
}
.button {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  color: #fff;
  font-size: 32rpx;
  box-sizing: border-box;
  background: linear-gradient(90deg, #fb892d 0%, #fe5e0f 100%);
}
.button--radius {
  border-radius: 44rpx;
}
.button--disabled {
  background: #d9d9d9;
}
