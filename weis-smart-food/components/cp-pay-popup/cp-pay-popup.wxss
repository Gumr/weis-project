.border {
  display: block;
  content: '';
  width: 100%;
  height: 2rpx;
  background: #eeeeee;
  transform: scaleY(0.5);
  position: absolute;
  left: 0;
  right: 0;
  margin: auto;
}
.pay-icon {
  width: 40rpx;
  height: 40rpx;
}
.select-icon {
  width: 38rpx;
  height: 38rpx;
}
.recharge {
  width: 133rpx;
  height: 50rpx;
  background: linear-gradient(90deg, #FCD006 0%, #FCBD06 100%);
  border-radius: 25rpx;
  text-align: center;
  line-height: 50rpx;
  color: #333333;
  font-size: 24rpx;
}
.pay-header {
  font-size: 32rpx;
  text-align: center;
  padding: 35rpx 0 15rpx;
  color: #000000;
}
.tip {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 645rpx;
  height: 64rpx;
  background: rgba(252, 204, 73, 0.2);
  border-radius: 6rpx;
  padding: 0 30rpx 0 12rpx;
  margin: 17rpx auto 25rpx;
}
.tip .c-l {
  display: flex;
  align-items: center;
}
.tip .c-l image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 8rpx;
}
.tip .c-l .num {
  color: #fa6400;
  font-size: 28rpx;
  line-height: 40rpx;
}
.tip .price {
  color: #fa6400;
  font-size: 28rpx;
  font-weight: bold;
}
.flex-items-center {
  display: flex;
  align-items: center;
}
.pay-main {
  padding: 0 50rpx;
}
.pay-main .pay-item {
  padding: 40rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
}
.pay-main .pay-item.disabled {
  padding: 35rpx 0;
}
.pay-main .pay-item::after {
  display: block;
  content: '';
  width: 100%;
  height: 2rpx;
  background: #eeeeee;
  transform: scaleY(0.5);
  position: absolute;
  left: 0;
  right: 0;
  margin: auto;
  bottom: 0;
}
.pay-main .pay-item .pay-text {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.6);
  font-weight: bold;
}
.pay-main .pay-item .text {
  margin-left: 8rpx;
}
.pay-main .pay-check-icon {
  width: 38rpx;
  height: 38rpx;
}
.pay-main .pay-protocol {
  margin-top: 26rpx;
}
.pay-main .pay-label {
  font-size: 24rpx;
}
.pay-main .pay-label__normal {
  color: #333;
}
.pay-main .pay-label__active {
  color: #fe5e0f;
}
.pay-main .pay-btn {
  margin: 23rpx auto 0;
  color: #fff;
  width: 650rpx;
  height: 88rpx;
  background: linear-gradient(90deg, #FB892D 0%, #FE5E0F 100%);
  border-radius: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.pay-main .disabled-btn {
  background: #a9a9a9;
  box-shadow: 0rpx 6rpx 14rpx 0rpx rgba(169, 169, 169, 0.5);
}
.ing {
  width: 30rpx;
  height: 30rpx;
  margin-left: 5rpx;
}
